@{
	Layout = null;
}
@model ServisFy.Models.Auth.RegisterDto
<!DOCTYPE html>

<html>
<head>
	<!-- Required meta tags -->
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<title>Servisfy @@Hesap Oluştur</title>
	<!-- plugins:css -->
	<!-- endinject -->
	<!-- Plugin css for this page -->
	<!-- End plugin css for this page -->
	<!-- inject:css -->
	<link rel="stylesheet" href="../../Dashboard/css/vertical-layout-light/style.css">
	<!-- endinject -->
	<link rel="shortcut icon" href="../../Dashboard/images/favicon.png" />
</head>
<body>
	<div class="container-scroller">
		<div class="container-fluid page-body-wrapper full-page-wrapper">
			<div class="content-wrapper d-flex align-items-center auth px-0">
				<div class="row w-100 mx-0">
					<div class="col-lg-4 mx-auto">
						<div class="auth-form-light text-left py-5 px-4 px-sm-5">
							<div class="brand-logo">
								<img src="../../Dashboard/images/logo.png" alt="logo">
							</div>
							<h4>ServisFY'da yeni misiniz?</h4>
							<h6 class="font-weight-light">Hesap oluşturmak çok kolay!</h6>

							@using (Html.BeginForm())
							{
								<div class="form-group">
									@Html.TextBoxFor(x=>x.k_tc,new {@class="form-control form-control-lg",@placeholder="T.C. Kimlik No", @required="required"})
									
								</div>
								<div class="form-group">
									@Html.TextBoxFor(x=>x.k_adi,new {@class="form-control form-control-lg",@placeholder="Adınız", @required="required"})
									
								</div>
								<div class="form-group">
									@Html.TextBoxFor(x=>x.k_soyadi,new {@class="form-control form-control-lg",@placeholder="Soyadınız", @required="required"})
								</div>
								<div class="form-group">
									@Html.TextBoxFor(x=>x.k_mail,new {@class="form-control form-control-lg",@placeholder="E-Posta",@type="email", @required="required"})
									
								</div>
							
								<div class="form-group">
									@Html.TextBoxFor(x=>x.passwordHash,new {@class="form-control form-control-lg",@placeholder="Şifreniz",@type="password", @required="required"})
									
								</div>
								<div class="form-group">
									@Html.TextBoxFor(x=>x.passwordHash,new {@class="form-control form-control-lg",@placeholder="Şifre Tekrar",@type="password", @required="required"})
									
								</div>
								<div class="mb-4">
									<div class="form-check">
										<label class="form-check-label text-muted">
											<input type="checkbox" class="form-check-input">
											Yukarıda verdiğim bilgiler doğrudur.
										</label>
									</div>
								</div>
								<div class="mt-3">
									<input type="submit" formmethod="post" formaction="/Register/Register" value="Hesap Oluştur" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" />
									
								</div>
								<div class="text-center mt-4 font-weight-light">
									Zaten bir hesabınız var mı? <a href="@Url.Action("Login","Auth")" class="text-primary">Giriş Yapın. </a>
								</div>
							}


						</div>
					</div>
				</div>
			</div>
			<!-- content-wrapper ends -->
		</div>
		<!-- page-body-wrapper ends -->
	</div>
	<!-- container-scroller -->
	<!-- plugins:js -->
	<script src="../../Dashboard/vendors/js/vendor.bundle.base.js"></script>
	<!-- endinject -->
	<!-- Plugin js for this page -->
	<!-- End plugin js for this page -->
	<!-- inject:js -->
	<script src="../../Dashboard/js/off-canvas.js"></script>
	<script src="../../Dashboard/js/hoverable-collapse.js"></script>
	<script src="../../Dashboard/js/template.js"></script>
	<script src="../../Dashboard/js/settings.js"></script>
	<script src="../../Dashboard/js/todolist.js"></script>
	<!-- endinject -->
</body>
</html>
