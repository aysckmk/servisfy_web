@{
	Layout = null;
}

<!DOCTYPE html>

<html>
<head>
	<!-- Required meta tags -->
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<title>Servisfy @@Hesap Oluştur</title>
	<!-- plugins:css -->
	<!-- endinject -->
	<!-- Plugin css for this page -->
	<!-- End plugin css for this page -->
	<!-- inject:css -->
	<link rel="stylesheet" href="../../Dashboard/css/vertical-layout-light/style.css">
	<!-- endinject -->
	<link rel="shortcut icon" href="../../Dashboard/images/favicon.png" />
</head>
<body>
	<div class="container-scroller">
		<div class="container-fluid page-body-wrapper full-page-wrapper">
			<div class="content-wrapper d-flex align-items-center auth px-0">
				<div class="row w-100 mx-0">
					<div class="col-lg-4 mx-auto">
						<div class="auth-form-light text-left py-5 px-4 px-sm-5">
							<div class="brand-logo">
								<img src="../../Dashboard/images/logo.png" alt="logo">
							</div>
							<h4>ServisFy'da yeni misiniz?</h4>
							<h6 class="font-weight-light">Hesap oluşturmak çok kolay!</h6>
							<form class="pt-3">
								<div class="form-group">
									<input type="text" class="form-control form-control-lg" id="exampleInputCity1" placeholder="Tc Kimlik No">
								</div>
								<div class="form-group">
									<input type="text" class="form-control form-control-lg" id="exampleInputName1" placeholder="Adınız">
								</div>
								<div class="form-group">
									<input type="text" class="form-control form-control-lg" id="exampleInputUsername1" placeholder="Soyadınız">
								</div>
								<div class="form-group">
									<input type="email" class="form-control form-control-lg" id="exampleInputEmail1" placeholder="E-Posta">
								</div>
								<div class="form-group">
									<input type="text" class="form-control form-control-lg" id="exampleInputNumber1" placeholder="Telefon Numarası">
								</div>

								<div class="form-group">
									<input type="text" class="form-control form-control-lg" id="exampleInputDistrict1" placeholder="Şifreniz">
								</div>
								<div class="form-group">
									<input type="password" class="form-control form-control-lg" id="exampleInputPassword1" placeholder="Şifre Tekrar">
								</div>
								<div class="mb-4">
									<div class="form-check">
										<label class="form-check-label text-muted">
											<input type="checkbox" class="form-check-input">
											Yukarıda verdiğim bilgiler doğrudur.
										</label>
									</div>
								</div>
								<div class="mt-3">
									<a class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" href="@Url.Action("Dash","Dash")">Hesap  Oluştur</a>
								</div>
								<div class="text-center mt-4 font-weight-light">
									Zaten bir hesabınız var mı? <a href="@Url.Action("Login","Auth")" class="text-primary">Giriş Yapın. </a>
								</div>
							</form>
						</div>
					</div>
				</div>
			</div>
			<!-- content-wrapper ends -->
		</div>
		<!-- page-body-wrapper ends -->
	</div>
	<!-- container-scroller -->
	<!-- plugins:js -->
	<script src="../../Dashboard/vendors/js/vendor.bundle.base.js"></script>
	<!-- endinject -->
	<!-- Plugin js for this page -->
	<!-- End plugin js for this page -->
	<!-- inject:js -->
	<script src="../../Dashboard/js/off-canvas.js"></script>
	<script src="../../Dashboard/js/hoverable-collapse.js"></script>
	<script src="../../Dashboard/js/template.js"></script>
	<script src="../../Dashboard/js/settings.js"></script>
	<script src="../../Dashboard/js/todolist.js"></script>
	<!-- endinject -->
</body>
</html>
