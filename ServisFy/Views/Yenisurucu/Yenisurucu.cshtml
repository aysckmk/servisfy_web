@{
	ViewData["Title"] = "Yenisurucu";
	Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}


@{
	ViewData["Title"] = "New";
	Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

@model ServisFy.Models.Auth.YeniSurucuDto

<!DOCTYPE html>

<html>
<head>
	<!-- Required meta tags -->
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<title>Servisfy @@Sürücü Ekle</title>
	<!-- plugins:css -->
	<!-- endinject -->
	<!-- Plugin css for this page -->
	<!-- End plugin css for this page -->
	<!-- inject:css -->
	<link rel="stylesheet" href="../../Dashboard/css/vertical-layout-light/style.css">
	<!-- endinject -->
	<link rel="shortcut icon" href="../../Dashboard/images/favicon.png" />
</head>
<body>
	<div class="container-scroller w-100 text-center">
		<div class="container-fluid page-body-wrapper full-page-wrapper">
			<div class="content-wrapper d-flex align-items-center auth px-0">
				<div class="row w-800 mx-0">
					<div class="col-lg-10 mx-auto">
						<div class="auth-form-light text-left py-8 px-6 px-sm-7">

							<h4>Yeni Sürücü Ekle</h4>
							@using (Html.BeginForm())
							{
								<div class="form-group">
									@Html.TextBoxFor(x=>x.plaka,new {@class="form-control form-control-lg",@placeholder="Servis Plakası", @required="required"})

								</div>
								<div class="form-group">
									@Html.TextBoxFor(x=>x.sr_adi,new {@class="form-control form-control-lg",@placeholder="Sürücü Adı", @required="required"})

								</div>
								<div class="form-group">
									@Html.TextBoxFor(x=>x.sr_soyadi,new {@class="form-control form-control-lg",@placeholder="Sürücü Soyadı", @required="required"})

								</div>

								<div class="mt-3">
									<input type="submit" formmethod="post" formaction="/Yonetim/Yonetim" value="Sürücü Ekle" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" />

								</div>

							}
						</div>

					</div>
				</div>
			</div>
		</div>
		<!-- content-wrapper ends -->
	</div>
	<!-- page-body-wrapper ends -->
	</div>
	<!-- container-scroller -->
	<!-- plugins:js -->
	<script src="../../Dashboard/vendors/js/vendor.bundle.base.js"></script>
	<!-- endinject -->
	<!-- Plugin js for this page -->
	<!-- End plugin js for this page -->
	<!-- inject:js -->
	<script src="../../Dashboard/js/off-canvas.js"></script>
	<script src="../../Dashboard/js/hoverable-collapse.js"></script>
	<script src="../../Dashboard/js/template.js"></script>
	<script src="../../Dashboard/js/settings.js"></script>
	<script src="../../Dashboard/js/todolist.js"></script>
	<!-- endinject -->
</body>
</html>





