@{
	ViewData["Title"] = "Ayarlar";
	Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}
@model ServisFy.Models.Auth.AyarlarDto

<head>
		<link href="~/ayarlar/style.css" rel="stylesheet">

</head>
<body>
	<div class="wrapper bg-white mt-sm-5 text-center">
		<h4 class="pb-4 border-bottom">Hesap Ayarları</h4>
		<div class="d-flex align-items-center py-3 border-bottom">
			<img src="~/Dashboard/images/faces/face27.jpg" class="img" alt="" width="300">
			<div class="pl-sm-4 pl-2 text-center" id="img-section">
				<br>

				<b>Profil Resmi</b>

				<br>
				<br>
				<button class="btn button border"><b>Yükle</b></button>
			</div>
		</div>
		<div class="py-6 text-center">
			<div class="row py-6 text-center">
				@using (Html.BeginForm())
				{
					<div class="form-group">
						@Html.TextBoxFor(x=>x.k_adi,new {@class="form-control form-control-lg text-center",@placeholder="Adınız", @required="required"})

					</div>
					<div class="form-group">
						@Html.TextBoxFor(x=>x.k_soyadi,new {@class="form-control form-control-lg text-center",@placeholder="Soyadınız", @required="required"})
					</div>

					<div class="form-group">
						@Html.TextBoxFor(x=>x.k_mail,new {@class="form-control form-control-lg text-center",@placeholder="E-Posta",@type="email", @required="required"})

					</div>
					<div class="form-group">
						@Html.TextBoxFor(x=>x.tel_no,new {@class="form-control form-control-lg text-center",@placeholder="Tel No", @required="required"})

					</div>






					<div class="py-3 pb-4 border-bottom text-center">
						<input type="submit" formmethod="post" formaction="/Dash/Dash" value="Kaydet" class="btn btn-primary mr-3" />

						<a href="@Url.Action("Dash","Dash")" class="btn border button">İptal </a>
					</div>
				}
			</div>

		</div>
	</div>
</body>

